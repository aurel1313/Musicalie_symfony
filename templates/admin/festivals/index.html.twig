{% extends 'admin/base_admin.html.twig' %}

{% block title %}Hello AdminFestivalsController!{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-12">
            <a href="{{ path('app_admin_festival_create') }}" class="btn btn-primary">Ajouter</a>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <table class="table table-striped">
                <thead>
                <tr>
                    <th>Nom</th>
                    <th>Date</th>
                    <th>Lieu</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for festival in festivals %}
                    <tr>
                        <td>{{ festival.nom }}</td>
                        <td>{{ festival.date|date('d/m/Y H:i:s') }}</td>
                        <td>{{ festival.lieu }}</td>
                        <td>
                            <a href="{{ path('app_admin_festival_update', { id: festival.id }) }}" class="btn btn-primary">Modifier</a>
                            <a onclick="confirm('Etes vous sur de vouloir supprimer {{ festival.nom }} ?') ? href='{{ path('app_admin_artiste_delete', { id: festival.id }) }}': '';" class="btn btn-danger">Supprimer</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
